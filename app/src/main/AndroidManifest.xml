<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dressy">

    <!-- PERMISSIONS -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@drawable/shadow_rect" />

        <activity
            android:name=".activities.Config"
            android:label="@string/title_activity_config" />
        <activity
            android:name=".activities.Favorites"
            android:label="@string/title_activity_favorites" />
        <activity
            android:name=".activities.Closet"
            android:label="@string/title_activity_closet">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Home"
            android:label="@string/title_activity_home" />
        <activity android:name=".activities.PasswordRequest" />
        <activity android:name=".activities.PasswordChange" />

        <service
            android:name=".services.UserRegistrationService"
            android:exported="false" />
        <service
            android:name=".services.UserLoginService"
            android:exported="false" />
        <service
            android:name=".services.UploadNewItemPhoto"
            android:exported="false" />

        <activity android:name=".activities.Register" />
        <activity android:name=".activities.Login" />
        <activity android:name=".activities.Launcher">

        </activity>
    </application>

</manifest>